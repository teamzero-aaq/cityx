<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="form thumbnail">
            <h2 style="text-align:center;">Add a new Sight!</h2>
            <form action="/sights" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name"  placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" placeholder="Address">
                </div>

                <div class="form-group">
                    <input class="form-control" id="city" type="text" name="city" placeholder="City">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" placeholder="price">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" id="btn1">Submit</button>
                </div>
            </form>
            <a href="/sights">Go Back!</a>
        </div>
            
    </div>
   
</div>
<script>
$("#btn1").click(function(){
    $("#city").val(function(){
        return this.value.toLowerCase();
    })
})
</script>



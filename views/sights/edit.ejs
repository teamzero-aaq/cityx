<% include ../partials/header %>
<div class="container">
    <div class="row">
        
        <div class="form thumbnail">
            <h2 style="text-align:center;">Edit Sight!</h2>
            <form action="/sights/<%=data.id%>?_method=PUT" method="POST">
                <div class="form-group">
                <!--The common error that we face during updation is we write sights["name"] instead of "sights[name]" -->
                    <input class="form-control" type="text" name="sights[name]"  value="<%=data.author%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[image]" value="<%=data.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[description]" value="<%=data.description%>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="sights[location]" id="location" value="<%= data.location %>">
                </div>
                
                <div class="form-group">
                    <input id="city" class="form-control" type="text" name="sights[city]" value="<%=data.city%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sights[price]" value="<%=data.price%>">
                </div>
                <div class="form-group">
                    <button id="btn" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/sights">Go Back!</a>
        </div>
            
    </div>
   
</div> 

<script>
$("#btn").click(function(){
    $("#city").val(function(){
        return this.value.toLowerCase();
    })
})
</script>


<% include ../partials/footer %>

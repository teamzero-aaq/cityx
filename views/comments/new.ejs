<% include ../partials/header %>

<div class="container" style="margin-top:100px;">
    <div class="row">
        <h1 style="text-align:center;">Add a new Comment to <%=sight.name %></h1>
        <div style="width:30%; margin:25px auto;">
            <form action="/sights/<%=sight._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Content">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/sights/<%=sight._id%>" >Go Back!</a>
        </div>
            
    </div>
   
</div>

<% include ../partials/footer %>
